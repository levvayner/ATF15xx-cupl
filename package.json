{
  "name": "ATF15xx-Cupl",
  "displayName": "ATF15xx Cupl",
  "publisher": "VaynerSystems",
  "description": "Tools for ATF 1500 series CPLD programming projects\n Helps create and manage projects and connect to tools.",
  "version": "0.0.4",
  "pricing": "Free",
  "repository": {"url": "https://github.com/levvayner/ATF15xx-cupl", "type": "git"},
  "preview": true,
  "engines": {
    "vscode": "^1.77.0"
  },
  "icon":"assets/circuit2-128p.png",
  "license": "SEE LICENSE IN LICENSE.txt",
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Snippets"
  ],
  "keywords": ["cupl", "atmisp", "atf1504"],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    
    "snippets": [
			{
				"language": "Cupl",
				"path": "./snippets.json"
			}
		],
    "configuration": {
      "title": "ATF15xx",
      "properties":{
        "ATF15xx.WinePath":{
          "type": ["string"],
          "default": "/usr/bin/wine",
          "description": "Path to wine executable"
        },
        "ATF15xx.OpenOCDPath": {
          "type": ["string"],
          "default": "/usr/bin/openocd",
          "description": "Path to OpenOCD executable"
        },        
        "ATF15xx.WinCPath": {
          "type": ["string"],
          "default": "~/.wine/drive_c",
          "description": "Path to Windows C:\\ drive (on Linux machine running wine)"
        },
        "ATF15xx.WinTempPath": {
          "type": ["string"],
          "default": "temp",
          "description": "Path to temp folder relative to C:\\ drive"
        },
        "ATF15xx.CuplBinPath": {
          "type": ["string"],
          "default": "~/.wine/drive_c",
          "description": "Path to Windows C:\\ drive (on Linux machine running wine)"
        },        
        "ATF15xx.AtmIspBinPath": {
          "type": ["string"],
          "default": "ATMEL_PLS_Tools/ATMISP/ATMISP.exe",
          "description": "Path of ASMISP.exe relative to C:\\"
        }            
      }
    },
    "customEditors": [
      {
        "viewType": "ATF15xx-cupl.pldEditor",
        "displayName": "PLD Editor",
        "selector": [
          {
            "filenamePattern": "*.PLD"
          }
        ],
        "priority": "default"
      }
    ],
    "languages": [
      {
        "id": "Cupl",
        "aliases": ["PLD", "Pld"],
        "extensions": [".PLD"]
      }
    ],
    "grammars": [
      {
        "language": "Cupl",
        "scopeName": "source.Cupl",
        "path": "./syntaxes/cupl.tmGrammar.json"
      }
    ],
    "viewsWelcome": [
      {
        "view": "atf15xx-project-files",
        "contents": "No files found.\n[Create Project](command:ATF15xx-cupl.createProject)\n[Open Project](command:ATF15xx-cupl.openProject)\n or\n [Create New PLD Here](command:atf15xx-project-files.addEntry)\n"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "atf15xx-project-files-container",
          "title": "ATF1504 Project Files",
          "icon": "assets/circuit2-128p.png"
        }
      ]
    },  
    "views": {
      "atf15xx-project-files-container": [
        {
          "id": "atf15xx-project-files",
          "name": "ATF1504 Project Files",
          "icon": "assets/circuit.png",
          "contextualTitle": "ATF1504 Project Files"
        }
      ]
    },  
    "menus": {
      "view/title": [
        {
          "command": "atf15xx-project-files.refreshEntry",
          "when": "view == atf15xx-project-files",
          "group": "navigation"
        }, 
        {
          "command": "ATF15xx-cupl.closeProject",
          "when": "view == atf15xx-project-files",
          "group": "navigation"
        },       
        {
          "command": "atf15xx-project-files.editEntry",
          "when": "view == atf15xx-project-files && viewItem =~ /.*\\.PLD$/",
          "icon": {
            "light": "assets/light/edit.svg",
            "dark": "assets/dark/edit.svg"
          }
        }
      ],
      "view/item/context": [
        {
          "command": "ATF15xx-cupl.compileProject",
          "when": "view == atf15xx-project-files && viewItem =~ /.*\\.PLD$/",
          "group": "inline"
        },
        {
          "command": "ATF15xx-cupl.deploySVF",
          "when": "view == atf15xx-project-files &&  viewItem =~ /.*\\.svf$/",
          "group": "inline"
        },
        {
          "command": "ATF15xx-cupl.runISP",
          "when": "view == atf15xx-project-files && viewItem =~ /.*\\.jed$/",
          "group": "inline"
        },
        {
          "command": "ATF15xx-cupl.runISP",
          "when": "view == atf15xx-project-files && viewItem =~ /.*\\.chn$/",
          "group": "inline"
        },
        {
          "command": "atf15xx-project-files.addEntry",
          "when": "view == atf15xx-project-files && viewItem == folder",
          "group": "inline"
        },
        {
          "command": "atf15xx-project-files.deleteEntry",
          "when": "view == atf15xx-project-files && viewItem != folder"
        }
      ],
      "explorer/context": [
        {
          "command": "atf15xx-project-files.addEntry",
          "when": "explorerResourceIsFolder || resourceScheme == folder"
        }
      ],
      "commandPalette": [
        {
          "command": "ATF15xx-cupl.deploySVF",
          "when": " resourceExtname == .svf"
        },
        {
          "command": "ATF15xx-cupl.compileProject",
          "when": " resourceExtname == .PLD"
        }
      ]
    },
    "commands": [
      {
        "command": "ATF15xx-cupl.deploySVF",
        "title": "ATF1504: Deploy SVF File"
      },
      {
        "command": "ATF15xx-cupl.createProject",
        "title": "ATF1504: Create Project"
      },
      {
        "command": "ATF15xx-cupl.openProject",
        "title": "ATF1504: Open Project"
      },
      {
        "command": "ATF15xx-cupl.compileProject",
        "title": "ATF1504: Compile Project"
      },
      {
        "command": "ATF15xx-cupl.runISP",
        "title": "ATF1504: Run ISP"
      },

      {
        "command": "atf15xx-project-files.on_item_clicked",
        "title": "ATF15xx project item"
      },
      {
        "command": "atf15xx-project-files.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "assets/light/refresh.svg",
          "dark": "assets/dark/refresh.svg"
        }
      },
      {
        "command": "ATF15xx-cupl.closeProject",
        "title": "Close Project",
        "icon": {
          "light": "assets/light/exit.svg",
          "dark": "assets/dark/exit.svg"
        }
      },      
      {
        "command": "atf15xx-project-files.addEntry",
        "title": "Add PLD",
        "icon": {
          "light": "assets/light/plus.svg",
          "dark": "assets/dark/plus.svg"
        }
      },
      {
        "command": "atf15xx-project-files.editEntry",
        "title": "Edit",
        "icon": {
          "light": "assets/light/edit.svg",
          "dark": "assets/dark/edit.svg"
        }
      },
      {
        "command": "atf15xx-project-files.deleteEntry",
        "title": "Delete"
      },
      {
        "command": "ATF15xx-cupl.checkPrerequisite",
        "title": "Check Preqrquisites"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.77.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "ts-loader": "^9.4.2",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1",
    "@vscode/test-electron": "^2.3.0"
  }
}
